<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:gravity="center"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.main_tab_fragment.contact.ContactFragment"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ProgressBar
        android:layout_weight="1"
        android:id="@+id/loadingContactListProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.recyclerview.widget.RecyclerView
        android:visibility="gone"
        android:id="@+id/contactRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <com.google.android.material.textfield.TextInputLayout
        android:hint="@string/searchFriendInputHint"
        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense"
        app:endIconMode="clear_text"
        app:endIconDrawable="@drawable/ic_clear_black_24dp"
        android:layout_width="@dimen/textInputLayoutWidth"
        android:layout_height="@dimen/textInputLayoutHeight"
        android:layout_marginVertical="@dimen/baseMargin"
        tools:ignore="PrivateResource"
        tools:targetApi="o">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/searchFriendEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </com.google.android.material.textfield.TextInputLayout>

    <ProgressBar
        android:id="@+id/addingFriendProgressBar"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/addFriendButton"
        android:text="@string/add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>
