<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:gravity="bottom"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:padding="@dimen/baseMargin2"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <ImageView
            android:src="@drawable/slide_image"
            android:layout_marginBottom="@dimen/baseMargin2"
            android:layout_width="@dimen/textInputLayoutWidth"
            android:layout_height="188dp"/>

        <TextView
            android:fontFamily="@font/roboto_medium"
            android:textSize="18sp"
            android:text="Lorem ipsum dolor sit amet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:fontFamily="@font/roboto_regular"
            android:layout_marginTop="@dimen/baseMargin"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Vestibulum iaculis eleifend purus vel cursus"
            android:layout_width="@dimen/textInputLayoutWidth"
            android:layout_height="wrap_content"/>


    </LinearLayout>


</LinearLayout>