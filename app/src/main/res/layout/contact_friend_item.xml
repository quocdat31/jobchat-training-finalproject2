<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:paddingHorizontal="@dimen/baseMargin2"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/friendItemRootLayout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/contactItemHeight"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    tools:targetApi="o">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/friendAvatarImageView"
        android:layout_width="@dimen/contactItemImageViewDimension"
        android:layout_height="@dimen/contactItemImageViewDimension"
        android:layout_gravity="center"
        android:background="@drawable/circle_shape"
        android:tint="@color/colorWhite" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/baseMargin2"
        android:layout_marginLeft="@dimen/baseMargin2"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical"
        tools:targetApi="o">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/friendNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_medium"
            android:textSize="18sp" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/friendEmailTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_regular"
            android:textSize="14sp" />

    </LinearLayout>

</LinearLayout>

