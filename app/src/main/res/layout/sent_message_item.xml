<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="end"
    android:layout_margin="@dimen/baseMargin"
    android:animateLayoutChanges="true"
    android:gravity="end">

    <com.google.android.material.card.MaterialCardView
        android:animateLayoutChanges="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:maxWidth="@dimen/textInputLayoutWidth"
        android:minWidth="@dimen/baseMargin3"
        android:orientation="vertical"
        android:padding="@dimen/baseMargin">

        <TextView
            android:id="@+id/sentMessageItemContentTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="@dimen/textInputLayoutWidth"
            android:text="@string/sampleEmail" />

        <TextView
            android:visibility="gone"
            style="@style/TextAppearance.MaterialComponents.Caption"
            android:layout_gravity="end"
            android:textColor="@color/colorDarkGray"
            android:id="@+id/sentMessageITemDateTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.5"
            android:maxWidth="@dimen/textInputLayoutWidth"
            android:text="@string/sampleMessageTime" />

    </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>
