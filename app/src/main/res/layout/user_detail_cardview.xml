<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:background="@android:color/transparent"
    android:gravity="center">

    <androidx.cardview.widget.CardView
        app:cardCornerRadius="@dimen/halfBaseMargin"
        android:layout_width="@dimen/userDetailCoverBackgroundCardViewWidth"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/baseMargin">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include
                android:id="@+id/userDetail"
                layout="@layout/contact_friend_item" />

            <ImageView
                android:layout_width="@dimen/userDetailCoverBackgroundCardViewWidth"
                android:layout_height="@dimen/userDetailCoverBackgroundCardViewHeight"
                android:scaleType="centerCrop"
                android:src="@drawable/img_background" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>