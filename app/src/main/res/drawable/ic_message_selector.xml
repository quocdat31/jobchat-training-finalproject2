<?xml version="1.0" encoding="utf-8"?>
<animated-selector xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:targetApi="lollipop">
    <item
        android:id="@+id/state_checked"
        android:drawable="@drawable/ic_message"
        android:state_checked="true" />
    <item
        android:id="@+id/state_default"
        android:drawable="@drawable/ic_message" />
    <transition
        android:reversible="true"
        android:drawable="@drawable/ic_message_animated"
        android:fromId="@id/state_default"
        android:toId="@id/state_checked" />
</animated-selector>
